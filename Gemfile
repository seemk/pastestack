source 'https://rubygems.org'
ruby '2.1.0'

gem 'rails', '4.0.3'
gem 'bcrypt-ruby'
gem 'bootstrap-sass'
gem 'sprockets', '2.11.0'
gem 'squeel'

group :development, :test do
    gem 'sqlite3'
    gem 'rspec-rails'
    gem 'guard-rspec'
    gem 'spork-rails'
    gem 'guard-spork'
    gem 'childprocess'
end

group :test do
    gem 'selenium-webdriver'
    gem 'capybara'
end

gem 'sass-rails', '4.0.1'
gem 'uglifier', '2.1.1'
gem 'coffee-rails', '4.0.1'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
    gem 'pg', '0.17.1'
    gem 'rails_12factor', '0.0.2'
end