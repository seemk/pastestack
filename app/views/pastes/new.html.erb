<div id="mainFrame">

    <%= form_for(@paste) do |f| %>
      <%= render 'shared/error_msgs', object: @paste %>
  
      <%= f.text_field :title, :placeholder => "- title -" %>
      
      <%= f.select(:language, available_languages)  %>
      <%= f.select(:expiration, [['1 day', 1.days.from_now], ['1 week', 1.week.from_now], ['1 month', 1.month.from_now], ['Never', 1000.years.from_now]]) %>

      <%= f.select(:exposure, exposure_selection) %>
      <%= f.text_area :content, :placeholder => "- paste here -", :required => true %>
      <%= f.submit "push()" %>
    <% end %>

    <div id="search">
        <%= render 'search' %>
    </div>
</div>

<div id="sideFrame">
        Recent public pastes:
        <table id="historyTable">
            <tbody>
              <% recent_pastes.each do |p| %>
              <tr><td> <%= link_to p.title, p %> </td></tr>
              <% end %>
            </tbody>
        </table>
        <%= link_to 'hide', '', :id => 'hide_history_btn' %>      
</div>
